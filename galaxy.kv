#:import menu menu

MainWidget:

<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: 'RESOURCES_KIVY/2_GALAXY/RESOURCES/images/bg1.jpg'
    menu_widget: menu_widget
    perspective_point_x: self.width / 2
    perspective_point_y: self.height * 0.75
    MenuWidget:
        id: menu_widget
    Label:
        text: root.score_txt
        font_size: dp(30)
        font_name: 'RESOURCES_KIVY/2_GALAXY/RESOURCES/fonts/Eurostile.ttf'
        size_hint: 0.18, 0.18
        pos_hint: {'x': 0, "top": 1}